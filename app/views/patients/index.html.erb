<h1>Patients</h1>
<%= link_to 'New Patient', new_patient_path %>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Next Appointment</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.email %></td>
        <td><%= patient.next_appointment %></td>
        <td>
          <%= link_to 'Edit', edit_patient_path(patient) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @patients %>